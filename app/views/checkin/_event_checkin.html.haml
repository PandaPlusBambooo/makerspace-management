.col-lg-12.col-md-12
  - @active_events.each_with_index do |event, index|
    .jumbotron{:style => "padding-top:10px; padding-bottom:10px"}
      = puts event[1]
      .d-flex.justify-content-between.align-items-center.mb-0.flex-wrap
        %h2.md-mb-0.md-mb-2
          Here for
          - if event[1] != nil
            %span{:style => "color:#76bf43"}
              = " #{event[1].name}? "
            %span
              Sign-in here:
          - else

        = form_tag checkin_path do
          .form-group.mb-0
            .input-group.input-group-md
              = text_field_tag :email, '', style: "min-width: 70px", class: 'form-control', placeholder: 'Email', autofocus: true
              %span.input-group-addon.p-2
                @mtu.edu
              - if event[1] != nil
                = hidden_field_tag("reason", "#{event[1].id.to_s}")
              - else
              .input-group-btn
                = submit_tag 'Submit', class: 'btn btn-primary'
