- unless @signup.errors.empty?
  .alert.alert-danger
    %strong
      #{pluralize(@signup.errors.size, 'error')} occurred

    %ul
      - @signup.errors.full_messages.each do |error|
        %li
          = error

= form_for @signup do |f|
  %hr
    %h5
      .form-group
        = f.label :signup_day
        = f.select :signup_day, options_for_select(Signup::SIGNUP_DAYS, f.object.signup_day || 'Monday'), {}, class: "form-control"
    %h5
      .form-group
        = f.label :signup_start
        = f.time_select( :signup_start, default: {minute: 0, hour: 3 })
    %h5
      .form-group
        = f.label :signup_end
        = f.time_select( :signup_end, default: {minute: 0, hour: 4 })
    %h5
      .form-group
        = f.label :signup_qty
        = f.select :signup_qty, options_for_select(Signup::SIGNUP_QTYS, f.object.signup_qty || '3'), {}, class: "form-control"

  = f.submit class: "btn btn-primary"
